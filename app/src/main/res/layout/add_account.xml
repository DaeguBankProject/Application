<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accountbackground"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="80dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용하실 대구은행 계좌를 입력해주세요." />

        <EditText
            android:id="@+id/editAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="계좌번호" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제하실 때 사용할 PIN번호를 입력해주세요." />

        <EditText
            android:id="@+id/editPin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="PIN번호"
            android:inputType="numberPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIN번호를 한번 더 입력해주세요." />

        <EditText
            android:id="@+id/editPinCheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="PIN번호 확인"
            android:inputType="numberPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:background="@drawable/registericon" />

        <Button
            android:id="@+id/accountCancelBtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:background="@drawable/cancelicon2" />
    </LinearLayout>

</LinearLayout>
